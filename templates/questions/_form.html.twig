{{ form_start(form) }}
<div class="input-group mb-3">
    <div class="input-group-prepend">
        <span class="input-group-text" id="titre">Titre de la question</span>
    </div>
    {{ form_row(form.nom,{'label':false,'attr':{'placeholder':'Titre de la question','class':'form-control','aria-label':'Username','aria-describedby':'titre'}}) }}
</div>
<div class="input-group mb-3">
    <div class="input-group-prepend">
        <span class="input-group-text" id="desc">Description de la question</span>
    </div>
    {{ form_row(form.description,{'label':false,'attr':{'placeholder':'Description de la question','class':'form-control','aria-label':'Username','aria-describedby':'desc'}}) }}
</div>
<div class="input-group mb-3">
    <div class="input-group-prepend">
        <span class="input-group-text" id="rep">Réponse de la question</span>
    </div>
    {{ form_row(form.reponse,{'label':false,'attr':{'placeholder':'Réponse de la question','class':'form-control','aria-label':'Username','aria-describedby':'rep'}}) }}
</div>
    {{ form_widget(form) }}
    <button class="btn btn-primary">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}
