{% extends 'base.html.twig' %}

{% block title %}Questions{% endblock %}

{% block body %}
    <h1>Questions</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ question.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ question.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ question.description }}</td>
            </tr>
            <tr>
                <th>Reponse</th>
                <td>{{ question.reponse }}</td>
            </tr>
        </tbody>
    </table>

    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('questions_index') }}">back to list</a>
        <a href="{{ path('questions_edit', {'id': question.id}) }}">edit</a>
        {{ include('questions/_delete_form.html.twig') }}
    {% endif %}



{% endblock %}
